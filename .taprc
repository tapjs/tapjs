########################## TAP RC CONFIG ##############################
# let tap handle these automatically
# jobs: 8 # however always set to 1 in ci/cd
# rcfile: /some/path.taprc
bail: false
branches: 100
browser: false
changed: false # wont run tests if nothing has changed since last run?
check-coverage: true
color: true
comments: true
coverage-map: './.tapcoverage.map.cjs'
coverage-report: []
coverage: true
debug: true
files: []
flow: true # cant set to true
functions: 100
grep: []
help: false
invert: false
jsx: false
lines: 100
node-arg: [] # set via cli to use pkg config vars
nyc-arg: []
nyc-help: false
nyc-version: false
only: false
parser-version: false
reporter-arg: []
reporter: base
save-fixture: false
save: Null
snapshot: false
statements: 100
test-arg: []
# test-env: [] # set via cli
test-ignore: $.
test-regex: '.test.(c|m)js$'
timeout: 100
ts: false
version: false
versions: false
watch: false # when true; press enter after test run to see options
