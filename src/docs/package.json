{
  "name": "@tapjs/docs",
  "version": "4.1.0",
  "description": "The content for https://node-tap.org",
  "type": "commonjs",
  "scripts": {
    "start": "eleventy --serve",
    "prebuild": "rm -rf _site",
    "build": "eleventy",
    "postbuild": "bash scripts/after-build.sh",
    "test": "npm run build",
    "predeploy": "npm run build",
    "predeploy:prod": "npm run build",
    "deploy:prod": "netlify deploy --site node-tap.org --dir ./src/docs/_site --prod"
  },
  "author": "Isaac Z. Schlueter <i@izs.me> (https://izs.me)",
  "license": "BlueOak-1.0.0",
  "dependencies": {
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "cheerio": "^1.1.2",
    "eleventy-plugin-toc": "^1.1.5",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "netlify-cli": "^23.11.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:tapjs/tapjs",
    "path": "src/docs"
  },
  "homepage": "https://github.com/tapjs/tapjs/src/docs#readme",
  "bugs": {
    "url": "https://github.com/tapjs/tapjs/issues"
  },
  "private": true,
  "engines": {
    "node": "20 || >=22"
  }
}
