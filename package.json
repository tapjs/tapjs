{
  "name": "tap",
  "version": "12.5.3",
  "author": "Isaac Z. Schlueter <i@izs.me> (http://blog.izs.me)",
  "description": "A Test-Anything-Protocol library",
  "homepage": "http://node-tap.org/",
  "bin": {
    "tap": "bin/run.js"
  },
  "browser": {
    "domain": "domain-browser"
  },
  "main": "lib/tap.js",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "bind-obj-methods": "^2.0.0",
    "browser-process-hrtime": "^1.0.0",
    "capture-stack-trace": "^1.0.0",
    "clean-yaml-object": "^0.1.0",
    "color-support": "^1.1.0",
    "coveralls": "^3.0.2",
    "domain-browser": "^1.2.0",
    "esm": "^3.2.5",
    "foreground-child": "^1.3.3",
    "fs-exists-cached": "^1.0.0",
    "function-loop": "^1.0.1",
    "glob": "^7.1.3",
    "isexe": "^2.0.0",
    "jackspeak": "^1.3.3",
    "js-yaml": "^3.12.1",
    "minipass": "^2.3.5",
    "mkdirp": "^0.5.1",
    "nyc": "^13.3.0",
    "opener": "^1.5.1",
    "os-homedir": "^1.0.2",
    "own-or": "^1.0.0",
    "own-or-env": "^1.0.1",
    "rimraf": "^2.6.3",
    "signal-exit": "^3.0.0",
    "source-map-support": "^0.5.10",
    "stack-utils": "^1.0.2",
    "tap-mocha-reporter": "^4.0.0",
    "tap-parser": "^8.0.1",
    "tap-yaml": "0.0.1",
    "tcompare": "^1.0.3",
    "trivial-deferred": "^1.0.1",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3",
    "write-file-atomic": "^2.4.2",
    "yapool": "^1.0.0"
  },
  "keywords": [
    "assert",
    "tap",
    "test",
    "testing"
  ],
  "license": "ISC",
  "repository": "https://github.com/tapjs/node-tap.git",
  "scripts": {
    "snap": "TAP_SNAPSHOT=1 node bin/run.js test -J",
    "test": "node bin/run.js test --100 -J --nyc-arg=--include={lib,bin}",
    "unit": "bash scripts/unit.sh",
    "posttest": "rm -rf cli-tests-*",
    "t": "node bin/run.js test -J -sfails.txt",
    "preversion": "npm test",
    "postversion": "npm publish",
    "postpublish": "git push origin --all; git push origin --tags"
  },
  "files": [
    "bin/run.js",
    "bin/jack.js",
    "lib/*.js"
  ]
}
